{
	"name": "camlrepl",
	"displayName": "CAML REPL",
	"description": "",
	"version": "0.0.1",
	"repository": {
		"url": "https://github.com/pqnet/vscode-caml-repl"
	},
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Programming Languages",
		"Debuggers"
	],
	"activationEvents": [
		"onLanguage:camllight",
		"onLanguage:ocaml",
		"onLanguage:ocaml.interface",
		"onLanguage:fsharp",
		"onCommand:extension.camlRepl.evaluate"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.camlRepl.evaluate",
				"title": "Evaluate selection/line"
			}
		],
		"keybindings": [
			{
				"command": "extension.camlRepl.evaluate",
				"key": "Alt+Enter"
			}
		],
		"configuration": [
			{
				"title": "CAML REPL",
				"properties": {
					"camlRepl.replCommand": {
						"default": "camllight",
						"type": "string",
						"enum": [
							"camllight",
							"ocaml",
							"utop",
							"fsi"
						],
						"enumDescriptions": [
							"CAML Light",
							"Objective CAML",
							"OCAML Universal Toplevel (utop)",
							"F# interactive"
						],
						"description": "Command to execute REPL"
					}
				}
			}
		]
	},
	"publisher": "pqnet",
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-watch": "webpack --mode development --watch --info-verbosity verbose",
		"test-compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"ts-loader": "^9.4.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vsce": "^1.70.0",
		"vscode-test": "^1.2.2",
		"webpack": "^5.39.1",
		"webpack-cli": "^5.0.1"
	}
}
